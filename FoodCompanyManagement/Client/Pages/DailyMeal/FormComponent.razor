
<EditForm Model="@dailyMeal" OnValidSubmit="@OnValidSubmit">
	<DataAnnotationsValidator />
	<ValidationSummary />

	<div class="form-group">
		<label>Meal Description: </label>
		<div>
			<InputText @bind-Value="@dailyMeal.MealDescription" class="form-control" />
			<ValidationMessage For="@(()=>dailyMeal.MealDescription)" />
		</div>
	</div>
	<div class="form-group">
		<label>Photo of your meal: </label>
		<div>
			<InputText @bind-Value="@dailyMeal.MealPhoto" class="form-control" />
			<ValidationMessage For="@(()=>dailyMeal.MealPhoto)" />
		</div>
	</div>

	<button type="submit" class="btn btn-success btn-block">
		@ButtonText
	</button>
	<BackToList Target="dailyMeals" />
</EditForm>

@code {
	[Parameter] public DailyMeal dailyMeal { get; set; }
	[Parameter] public string ButtonText { get; set; } = "Save";
	[Parameter] public EventCallback OnValidSubmit { get; set; }
}
