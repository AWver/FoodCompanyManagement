@page "/topics/create"
@inject HttpClient _client
@inject NavigationManager _navManager


<h1>Create a topic!</h1>

<br />

<EditForm Model="@topic" OnValidSubmit="CreateTopicData">
	<DataAnnotationsValidator />
	<ValidationSummary />

	<div class="form-group">
		<label>Topic Name: </label>
		<div>
			<InputText @bind-Value="@topic.TopicName" class="form-control" />
			<ValidationMessage For="@(()=>topic.TopicName)" />
		</div>
	</div>
	<div class="form-group">
		<label>Topic Description: </label>
		<div>
			<InputText @bind-Value="@topic.TopicDesc" class="form-control" />
			<ValidationMessage For="@(()=>topic.TopicDesc)" />
		</div>
	</div>

	<button type="submit" class="btn btn-success btn-block">
		Create topic
	</button>

</EditForm>





@code {
	Topic topic = new Topic();

	private async Task CreateTopicData()
	{
		await _client.PostAsJsonAsync(Endpoints.TopicsEndpoint, topic);
		_navManager.NavigateTo("/topics");
	}

}